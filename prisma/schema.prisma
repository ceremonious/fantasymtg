generator client {
    provider = "prisma-client-js"
}

datasource db {
    provider = "postgresql"
    url      = env("DATABASE_URL")
}

model League {
    id String @id @default(cuid())
    name String
    createdAt DateTime @default(now())
    startDate DateTime
    startingAmount Int

    leagueMember LeagueMember[]
    transactions Transaction[]
}

model LeagueMember {
    id String @id @default(cuid())
    displayName String
    accountID String
    leagueID String
    isOwner Boolean
    createdAt DateTime @default(now())

    leauge    League @relation(fields: [leagueID], references: [id])

    transactions Transaction[]
}

model Card {
    id String @id
    name String
    setName String
    scryfallURI String
    imageURI String?

    transactions Transaction[]
    cardPrices CardPrice[]
}

model CardPrice {
    cardID String 
    timestamp DateTime
    amountNormal Int
    amountFoil Int

    card      Card @relation(fields: [cardID], references: [id])
    @@unique([cardID, timestamp])
}

model Transaction {
    id String @id @default(cuid())
    description String
    createdAt DateTime
    leagueID String
    leagueMemberID String

    type String
    cardID String?
    cardType String?
    amount Int
    quantity Int

    card      Card? @relation(fields: [cardID], references: [id])
    leauge    League @relation(fields: [leagueID], references: [id])
    member    LeagueMember @relation(fields: [leagueMemberID], references: [id])
}